<h3 class="show_title">  <%= @mpuzzle.title %>  </h3>


<div class="show_image">
  <%= image_tag(@mpuzzle.image_url, size: "225x225") %>
</div>

<p>
  <strong>Puzzle:</strong>
  <br/>
  <%= sanitize(@mpuzzle.question) %>
</p>

<%= button_to_function "View/Hide Solution", "$('#solution').toggle()" %>

<p id="solution" style="display:none;">
  <strong>Solution:</strong>
  <br/>
  <%= sanitize(@mpuzzle.solution) %>
</p>

<p>
  <strong>Difficulty:</strong>
  <br/>
  <%= @mpuzzle.difficulty %>
</p>

<%= link_to 'Edit', edit_mpuzzle_path(@mpuzzle) %> |
<%= link_to 'Back', mpuzzles_path %>