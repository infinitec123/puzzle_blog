
<h3 class="show_title">  <%= @puzzle.title %>  </h3>


<div class="show_image">
  <%= image_tag(@puzzle.image_url, size: "225x225") %>
</div>

<p>
  <strong>Puzzle:</strong>
  <br/>
  <%= sanitize(@puzzle.question) %>
</p>

<p>
  <strong>Solution:</strong>
  <br/>
  <%= sanitize(@puzzle.solution) %>
</p>

<p>
  <strong>Difficulty:</strong>
  <br/>
  <%= @puzzle.difficulty %>
</p>

<%= link_to 'Show All', root_url %>
