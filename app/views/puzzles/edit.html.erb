<h1>Edit Puzzle</h1>

<%= form_for @puzzle, :url => {:action => "update"} do |f| %>

  <% if @puzzle.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@puzzle.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @puzzle.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</div>
 
<div class="field">
    <%= f.label :question %><br>
    <%= f.text_area :question, rows: 6 %>
</div>

<div class="field">
    <%= f.label :solution %><br>
    <%= f.text_area :solution, rows: 10 %>
</div>

<div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
</div>

<div class="field">
    <%= f.label :difficulty %><br>
    <%= f.select :difficulty, Puzzle::DIFFICULTY_LEVELS, prompt: 'Select a difficulty level' %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>

<%= link_to 'Back', puzzles_path %>